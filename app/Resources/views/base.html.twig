<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
        <meta name="robots" content="noindex,nofollow" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>{% block title %}Letters{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />
        <link rel="stylesheet"  type="text/css" media="all" href="{{ asset('/bundles/lettersfront/bootstrap/css/bootstrap.min.css') }}" />
        <link rel="stylesheet"  type="text/css" media="all" href="{{ asset('/bundles/lettersfront/css/jquery-ui-1.10.4.custom.css') }}" />
        <link rel="stylesheet"  type="text/css" media="all" href="{{ asset('/bundles/lettersfront/css/front.css') }}" />   
        <link rel="stylesheet"  type="text/css" media="all" href="{{ asset('/bundles/lettersfront/summernote/css/summernote.css') }}" /> 
        <link rel="stylesheet"  type="text/css" media="all" href="{{ asset('/bundles/lettersfront/summernote/css/font-awesome.min.css') }}" /> 
        
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="{{ asset('/bundles/lettersfront/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('/bundles/lettersfront/js/jquery-ui-1.10.0.custom.min.js') }}"></script>
        <script src="{{ asset('/bundles/lettersfront/js/main.js') }}"></script>
        <script src="{{ asset('/bundles/lettersfront/summernote/summernote.min.js') }}"></script>
        <script src="{{ asset('/bundles/lettersfront/summernote/summernote-fr-FR.js') }}"></script>
    {% block head %}{% endblock %}
</head>        
<body>
    <nav role="navigation" class="navbar navbar-fixed-top navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-bar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               <a href="#" class="nav-logo" ><img src="{{ asset('/bundles/omaracujafront/images/omaracuja_logo.png') }}"></a>
            </div>

            <div id="nav-bar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-left navbar-form">
                    <li><a href="#">Evènements</a></li>
                    <li><a href="#">Photos</a></li>
                    <li><a href="#">Vidéos</a></li>
                    <li><a href="#">Contact</a></li>
                        
                </ul>
            </div>
        </div>
    </nav>
    <div id="mainContainer" class="container">
        {% for flashMessage in app.session.flashbag.get('alert-success') %}
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                {{ flashMessage | raw }}
            </div>
        {% endfor %}

        {% block content %}
        {% endblock %}
    </div>
    <div class="modal" id="simpleModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h5 class="modal-title" id="myModalLabel"></h5>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
</body>       
</html>